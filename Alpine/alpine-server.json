  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "root<enter><wait><wait>",
        "ifconfig eth0 up && udhcpc -i eth0<enter><wait10>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/alpine/{{ user `alpine_version` }}/answers<enter><wait>",
        "sed -i 's/sda/vda/g' $PWD/answers<enter>",
        "setup-alpine -f $PWD/answers<enter><wait5>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "<wait10><wait10><wait10>",
        "y<enter>",
        "<wait10><wait10><wait10>",
        "rc-service sshd stop<enter>",
        "mount /dev/vda2 /mnt<enter>",
        "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter>",
        "echo http://dl-cdn.alpinelinux.org/alpine/edge/community >> /mnt/etc/apk/repositories<enter>",
        "mount -t proc none /mnt/proc<enter>",
        "mount -o bind /sys /mnt/sys<enter>",
        "mount -o bind /dev /mnt/dev<enter>",
        "chroot /mnt /bin/sh -l<enter>",
        "apk update<enter>",
        "apk add bash curl rsyslog ruby shadow sudo<enter><wait>",
        "gem install facter<enter>",
        "<wait60><wait60>",
        "groupadd vagrant<enter>",
        "useradd vagrant -g vagrant -G wheel<enter>",
        "passwd vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "echo 'vagrant        ALL=(ALL)       NOPASSWD: ALL' >> /etc/sudoers<enter>",
        "exit<enter><wait10>",
        "umount /mnt/proc<enter>",
        "umount /mnt/sys<enter>",
        "umount /mnt/dev<enter>",
        "umount /mnt<enter>",
        "reboot<enter>"
      ],
      "boot_wait": "30s",
      "cpus": "{{ user `vm_vcpu` }}",
      "disk_interface": "virtio",
      "disk_cache": "unsafe",
      "disk_size": "{{ user `vm_disk_size` }}",
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `vm_memory` }}",
